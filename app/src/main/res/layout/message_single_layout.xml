<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="10dp"
    android:minWidth="60dp"
    android:layout_marginEnd="75dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/message_single_shape">

    <TextView
        android:id="@+id/message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textColor="#606EED"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:layout_below="@id/message_author"
        android:text="Mrfnrjfnrnjf "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text"
        android:layout_alignEnd="@+id/message_text"
        android:layout_marginEnd="2dp"
        android:text="12:00"
        android:textColor="#B3000000"
        android:textSize="12sp" />

</RelativeLayout>