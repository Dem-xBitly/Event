<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettings">

    <ImageButton
        android:id="@+id/back_from_profile_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/back_btn_background"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/settings_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        />

    <EditText
        android:id="@+id/username_profile_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:minHeight="50dp"
        android:hint="@string/username"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_txt_shape"
        android:layout_centerInParent="true"
        android:layout_marginTop="155dp"
        android:inputType="textPersonName"/>

    <LinearLayout
        android:id="@+id/settings_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username_profile_settings"
        android:layout_marginTop="40dp"
        >
        <CheckBox
            android:id="@+id/male_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALE"
            android:textSize="25sp"/>

        <CheckBox
            android:id='@+id/female_check'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/apply_changes_profile_settings_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/sign_up_btn"
        android:text="APPLY"
        android:textColor="#fff"/>


</RelativeLayout>