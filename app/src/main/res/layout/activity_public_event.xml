<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PublicEventActivity">

    <ImageButton
        android:id="@+id/back_from_public_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/back_btn_background"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/create_public_event_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        />

    <EditText
        android:id="@+id/event_name_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:minHeight="50dp"
        android:hint="@string/name"
        android:textColorHint="@color/hints_color"
        android:paddingStart="20dp"
        android:background="@drawable/edit_txt_shape"
        android:layout_below="@+id/create_public_event_txt"
        android:layout_marginTop="170dp"
        android:inputType="textPersonName"/>

    <LinearLayout
        android:id="@+id/max_amount_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:layout_below="@+id/event_name_public"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/event_max_amount"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:hint="max amount"
            android:textColorHint="@color/hints_color"
            android:background="@drawable/edit_txt_shape"
            android:paddingStart="20dp"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            />

        <ImageButton
            android:id="@+id/infinity_amount_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_btn"
            android:src="@drawable/finity_icon"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/time_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:layout_below="@+id/max_amount_linear"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:text="time"
            android:paddingTop="10dp"
            android:textColorHint="@color/hints_color"
            android:background="@drawable/edit_txt_shape"
            android:paddingStart="20dp"
            android:textSize="22sp"
            android:layout_below="@+id/max_amount_linear"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/pick_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_btn"
            android:src="@drawable/ic_baseline_access_time_24"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/date_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:layout_below="@+id/time_linear"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:text="date"
            android:paddingTop="10dp"
            android:textColorHint="@color/hints_color"
            android:background="@drawable/edit_txt_shape"
            android:paddingStart="20dp"
            android:textSize="22sp"
            android:layout_below="@+id/max_amount_linear"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/pick_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_btn"
            android:src="@drawable/ic_baseline_date_range_24"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/next_btn_from_public_event_btn"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/sign_up_btn"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>