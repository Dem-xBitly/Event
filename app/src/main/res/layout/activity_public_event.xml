<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.PublicEventActivity">

    <ImageButton
        android:id="@+id/back_from_public_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/back_btn_background"
        android:padding="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/create_public_event_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />


    <LinearLayout
        android:id="@+id/linnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/event_name_public"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/name"
            android:textColor="@color/black"
            android:textColorHint="@color/black75"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_txt_shape"
            android:inputType="textPersonName"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/event_max_amount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:layout_toStartOf="@+id/infinity_amount_btn"
                android:background="@drawable/edit_txt_shape"
                android:hint="@string/max_amount"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/black75" />

            <ImageButton
                android:id="@+id/infinity_amount_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/sign_up_btn"
                android:padding="15dp"
                android:src="@drawable/finity_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/event_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:layout_toStartOf="@+id/pick_time_btn"
                android:background="@drawable/edit_txt_shape"
                android:hint="@string/time"
                android:inputType="time"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/black75" />
            <ImageButton
                android:id="@+id/pick_time_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/sign_up_btn"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_access_time_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/pick_date_btn"
                android:background="@drawable/edit_txt_shape"
                android:hint="@string/date"
                android:inputType="date"
                android:textColor="@color/black"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/black75" />

            <ImageButton
                android:id="@+id/pick_date_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/sign_up_btn"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_date_range_24" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_btn_from_public_event_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linnn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/sign_up_btn"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>